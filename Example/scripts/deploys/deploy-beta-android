#!/usr/bin/env bash
set -euo pipefail

cd "$(dirname "$0")/../.."

echo "Cleaning temp build folder: $TMPDIR/eas-build-local-nodejs"
rm -rf "$TMPDIR/eas-build-local-nodejs"
echo "Starting Android EAS build (beta profile)..."
eas build --platform android --profile beta --local --output build.aab
echo "Submitting Android build (beta profile)..."
eas submit --platform android --profile beta --path build.aab
