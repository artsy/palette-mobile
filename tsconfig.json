{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "declaration": true,
    "jsx": "react-jsx", // This is for vscode not to suggest importing React, after react17.
    "skipLibCheck": true,
    "types": ["styled-components-react-native", "jest"]
  },
  "include": ["src/**/*"]
}
